{% extends 'base.tmpl' %}
{% block title %}SPI Media Gallery - Search result{% endblock %}

{% block body_attributes %}class="d-flex flex-column h-100"{% endblock %}

{% block body_contents %}
        <div class="container theme-showcase" role="main">
            {% include "logo.tmpl" %} <h3>{{ tags_list }}</h3>
            {{ search_explanation }}
            <div class="container">
                <div class="card-columns">
                {% for medium in media %}
                    {% if medium.medium_type == "P" %}
                        <div class="card p-1">
                            <a href="/display/{{ medium.id }}"><img class="card-img-top" src="{{ medium.link_for_thumbnail_resolution }}" alt=""></a>
                        </div>
                    {% else %}
                        <div class="card p-1">

                            <div class="embed-responsive {{ medium.embed_responsive_ratio }}">
                                <a href="/display/{{ medium.id }}">
                                    <video>
                                        <source src="{{ medium.link_for_thumbnail_resolution }}" type="video/webm">
                                    </video>
                                </a>
                            </div>
                        </div>
                    {% endif %}
                {%endfor %}
                </div>
            </div>

            {% include "pagination.tmpl" %}

        </div>
{% endblock %}
