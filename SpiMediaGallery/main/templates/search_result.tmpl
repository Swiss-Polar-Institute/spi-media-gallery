{% extends 'base.tmpl' %}
{% block title %}SPI Media Gallery - Search result{% endblock %}

{% block contents %}

Search result for: {{ tag_id }}


{% for photo in photos %}
    {% if forloop.first %}<div class="row">{% endif %}

    <div class="col-lg-4">
        <div class="thumbnail">
            <img src="{{photo.thumbnail}}" class="img-fluid img-thumbnail">
        </div>
    </div>

    {% if forloop.counter|divisibleby:3 %}</div><div class="row">{% endif %}

    {% if forloop.last %}</div>{% endif %}
{% endfor %}
